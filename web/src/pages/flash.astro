---
import "@/styles/global.css";

const mode = import.meta.env.MODE;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CoachCraft</title>
  </head>

  <body class="bg-bg-black min-h-screen flex items-center justify-center" data-mode={mode}>
    <div class="text-center">
      <!-- Logo -->
      <div class="mb-8">
        <img 
          src="/images/coach_craft_logo.svg" 
          alt="CoachCraft Logo" 
          class="w-32 h-32 mx-auto animate-pulse"
        />
      </div>
    </div>

    <script>
      import { initApp } from '@/utils/flash-init';
      
      const mode = document.body.getAttribute('data-mode') || '';
      initApp(mode);
    </script>
  </body>
</html>
