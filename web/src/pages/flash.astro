---
import "@/styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CoachCraft - Loading...</title>
  </head>

  <body class="bg-bg-black min-h-screen flex items-center justify-center" x-data="flashPage()">
    <div class="text-center">
      <!-- Logo -->
      <div class="mb-8">
        <img 
          src="/images/coach_craft_logo.svg" 
          alt="CoachCraft Logo" 
          class="w-32 h-32 mx-auto animate-pulse"
        />
      </div>
    </div>

    <script>
      function flashPage() {
        return {
          loading: false,
          
          init() {
            // In production, main.ts will handle authentication and redirect
            // In development, redirect immediately
            if (typeof import.meta.env !== 'undefined' && import.meta.env.MODE !== 'production') {
              window.location.href = '/';
            }
          }
        }
      }
    </script>
  </body>
</html>
