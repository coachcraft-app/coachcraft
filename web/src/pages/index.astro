---
import HeaderBar from "../components/navigation/HeaderBar.astro";
import LeftNav from "../components/navigation/LeftNav.astro";
import Footer from "../components/navigation/Footer.astro";

import Toast from "../components/common/Toast.astro";

import Dashboard from "../components/pages/Dashboard.astro";
import Activities from "../components/pages/Activities.astro";
import Notes from "../components/pages/Notes.astro";
import Scheduling from "../components/pages/Scheduling.astro";
import Sessions from "../components/pages/Sessions.astro";
import Teams from "../components/pages/Teams.astro";
import Settings from "../components/pages/Settings.astro";

import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CoachCraft</title>
  </head>

  <body class="bg-bg-black mx-5 my-1" x-data>
    <HeaderBar />

    <div class="flex gap-4 max-h-[85vh]">
      <LeftNav />
      <div class="w-full flex justify-center mt-10">
        <div class="min-w-[80vw]">
          <!-- Dashboard Page -->
          <div
            x-cloak
            x-show="$store.router.currentPage === 'dashboard'"
            x-transition
          >
            <Dashboard />
          </div>

          <!-- Activities Page -->
          <div
            x-cloak
            x-show="$store.router.currentPage === 'activities'"
            x-transition
          >
            <Activities />
          </div>

          <!-- Notes Page -->
          <div
            x-cloak
            x-show="$store.router.currentPage === 'notes'"
            x-transition
          >
            <Notes />
          </div>

          <!-- Scheduling Page -->
          <div
            x-cloak
            x-show="$store.router.currentPage === 'scheduling'"
            x-transition
          >
            <Scheduling />
          </div>

          <!-- Sessions Page -->
          <div
            x-cloak
            x-show="$store.router.currentPage === 'sessions'"
            x-transition
          >
            <Sessions />
          </div>

          <!-- Teams Page -->
          <div
            x-cloak
            x-show="$store.router.currentPage === 'teams'"
            x-transition
          >
            <Teams />
          </div>

          <!-- Settings Page -->
          <div
            x-cloak
            x-show="$store.router.currentPage === 'settings'"
            x-transition
          >
            <Settings />
          </div>
        </div>
      </div>
    </div>

    <Toast />

    <Footer />
  </body>
</html>
