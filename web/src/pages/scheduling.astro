---
import MainLayout from "../layouts/MainLayout.astro";
import ListButton from "../components/ListButton.astro";
import TextInput from "../components/TextInput.astro";
import TextArea from "../components/TextArea.astro";
import Button from "../components/Button.astro";
import DropDown from "../components/DropDown.astro";
import Image from "astro/components/Image.astro";
---

<MainLayout title="Scheduling">
  <div class="flex h-full" x-data>
    <!-- Left pane: Current Schedule -->
    <div
      class="w-1/2 p-4 border-r border-gray-600"
      @dragover.prevent="$store.scheduling.handleDragOver($event)"
      @drop="$store.scheduling.handleDrop($event)"
    >
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl">Current Schedule</h2>
        <Button
          type="button"
          label="Save Session"
          width="fit"
          onClick="$store.scheduling.saveSession()"
        />
      </div>

      <input
        x-model="$store.scheduling.sessionName"
        placeholder="Schedule Name"
        class="w-full mb-4 px-2 py-1 bg-gray-800 rounded"
      />

      <template x-if="!$store.scheduling.sessionActivities.length">
        <p class="text-gray-400">
          Drag activities here to assemble your session.
        </p>
      </template>

      <ul class="space-y-2">
        <template
          x-for="(act, idx) in $store.scheduling.sessionActivities"
          :key="act.id"
        >
          <li class="flex justify-between items-center p-2 bg-gray-700 rounded">
            <div class="flex items-center gap-2">
              <div class="flex flex-col">
                <button
                  class="text-gray-400 hover:text-white"
                  @click="$store.scheduling.moveActivityUp(idx)"
                  :disabled="idx === 0"
                  aria-label="Move activity up">&uarr;</button
                >
                <button
                  class="text-gray-400 hover:text-white"
                  @click="$store.scheduling.moveActivityDown(idx)"
                  :disabled="idx === $store.scheduling.sessionActivities.length - 1"
                  aria-label="Move activity down">&darr;</button
                >
              </div>
              <div class="flex flex-col">
                <span x-text="act.name" class="font-medium"></span>
                <span x-text="act.duration" class="text-sm text-gray-400"
                ></span>
              </div>
            </div>
            <Button
              type="button"
              label="Remove"
              width="fit"
              onClick="$store.scheduling.removeFromSession(idx)"
            />
          </li>
        </template>
      </ul>
    </div>

    <!-- Right pane: Tabs -->
    <div class="w-1/2 p-4">
      <div class="flex border-b border-gray-600">
        <button
          class="px-4 py-2"
          :class="{'border-b-2 border-white': $store.scheduling.selectedTab==='lists'}"
          @click="$store.scheduling.switchTab('lists')">Lists</button
        >
        <button
          class="px-4 py-2"
          :class="{'border-b-2 border-white': $store.scheduling.selectedTab==='last'}"
          @click="$store.scheduling.switchTab('last')">Last Session</button
        >
        <button
          class="px-4 py-2"
          :class="{'border-b-2 border-white': $store.scheduling.selectedTab==='history'}"
          @click="$store.scheduling.switchTab('history')">History</button
        >
      </div>

      <!-- LISTS TAB -->
      <div x-show="$store.scheduling.selectedTab==='lists'" class="mt-4">
        <DropDown
          items="$store.pages.activities.listsNames"
          onItemSwitch="$store.pages.activities.onListSwitch(listToSelect)"
        />
        <ul class="mt-2 space-y-2">
          <template
            x-for="activity in $store.pages.activities.selectedListActivities"
            :key="activity.id"
          >
            <li
              class="p-2 bg-gray-800 rounded cursor-grab hover:bg-gray-700 transition-colors"
              draggable="true"
              @dragstart="$store.scheduling.handleDragStart($event, activity)"
            >
              <div class="flex justify-between items-center">
                <span x-text="activity.name" class="font-medium"></span>
                <span class="text-sm text-gray-400" x-text="activity.duration"
                ></span>
              </div>
            </li>
          </template>
        </ul>
      </div>

      <!-- LAST SESSION TAB -->
      <div x-show="$store.scheduling.selectedTab==='last'" class="mt-4">
        <h3 class="mb-2">
          "<span x-text="$store.scheduling.lastSession.name"></span>"
        </h3>
        <ul class="space-y-2">
          <template
            x-for="id in $store.scheduling.lastSession.activities"
            :key="id"
          >
            <li
              class="p-2 bg-gray-800 rounded cursor-pointer hover:bg-gray-700 transition-colors"
              @click="$store.scheduling.addToSession($store.scheduling.activitiesList.find(a => a.id===id))"
            >
              <div class="flex justify-between items-center">
                <span
                  x-text="$store.scheduling.activitiesList.find(a => a.id===id).name"
                ></span>
                <span
                  class="text-sm text-gray-400"
                  x-text="$store.scheduling.activitiesList.find(a => a.id===id).duration"
                ></span>
              </div>
            </li>
          </template>
        </ul>
        <Button
          class="mt-3"
          type="button"
          label="Load Entire Session"
          width="fit"
          onClick="$store.scheduling.loadSession($store.scheduling.lastSession)"
        />
      </div>

      <!-- HISTORY TAB -->
      <div x-show="$store.scheduling.selectedTab==='history'" class="mt-4">
        <ul class="space-y-2">
          <template
            x-for="sess in $store.scheduling.previousSessions"
            :key="sess.id"
          >
            <li
              class="flex justify-between items-center p-2 bg-gray-800 rounded hover:bg-gray-700 transition-colors"
            >
              <span x-text="sess.name"></span>
              <Button
                type="button"
                label="Load"
                width="fit"
                onClick="$store.scheduling.loadSession(sess)"
              />
            </li>
          </template>
        </ul>
      </div>
    </div>
  </div>
</MainLayout>
