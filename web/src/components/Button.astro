---
import reactify from "../utils/reactify";

var {
  label,
  addClasses,
  width,
  isSelected = false,
  type,
  handleClick = "",
} = Astro.props;

const x_data = `{
  ${reactify(handleClick, "handleClick")}
}`;
---

<input
  type={type}
  value={label}
  x-data={x_data}
  @click="handleClick"
  class={`whitespace-nowrap
        ${isSelected ? "bg-low-contrast-grey" : "bg-transparent"}
        rounded-radius
        block
        border border-primary
        w-${width}
        pl-4 pr-4 py-1.5
        text-sm font-medium
        cursor-pointer
        select-none
        text-primary
        text-left
        tracking-wide
        transition
        hover:opacity-75
        focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary
        active:opacity-100 active:outline-offset-0
        disabled:opacity-75 disabled:cursor-not-allowed
        dark:border-low-contrast-grey dark:${isSelected ? "text-bg-black" : "text-primary-dark"} 
        dark:focus-visible:outline-primary-dark
        rounded-lg
        ${addClasses}`}
/>
