---

<div
  class="flex h-full"
  x-data="{ activeTab: 'upcoming', showConfirm: false, sessionToComplete: null, expandedActivitiesUpcoming: {}, expandedActivitiesPrevious: {}, showDeleteConfirm: false, sessionToDelete: null }"
>
  <div class="w-full p-4">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl">Sessions</h2>
      <div class="flex border-b border-gray-600">
        <button
          class="px-4 py-2"
          :class="{'border-b-2 border-white': activeTab === 'upcoming'}"
          @click="activeTab = 'upcoming'">Upcoming</button
        >
        <button
          class="px-4 py-2"
          :class="{'border-b-2 border-white': activeTab === 'previous'}"
          @click="activeTab = 'previous'">Previous</button
        >
      </div>
    </div>

    <!-- Upcoming Sessions -->
    <div x-show="activeTab === 'upcoming'">
      <ul class="space-y-2">
        <template
          x-for="sess in $store.scheduling.upcomingSessions"
          :key="sess.id"
        >
          <li
            class="flex flex-col p-2 bg-gray-800 rounded hover:bg-gray-900 transition-colors"
          >
            <div class="flex justify-between items-center">
              <div>
                <span x-text="sess.name" class="font-medium"></span>
                <span x-text="sess.date" class="text-sm text-gray-400 ml-2"
                ></span>
              </div>
              <div class="flex gap-2">
                <button
                  type="button"
                  class="whitespace-nowrap bg-transparent rounded-radius block border border-primary w-fit pl-4 pr-4 py-1.5 text-sm font-medium cursor-pointer select-none text-primary text-left tracking-wide transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary active:opacity-100 active:outline-offset-0 disabled:opacity-75 disabled:cursor-not-allowed dark:border-low-contrast-grey dark:focus-visible:outline-primary-dark rounded-lg"
                  @click="sessionToComplete = sess.id; showConfirm = true"
                >
                  Mark as Complete
                </button>
                <button
                  type="button"
                  class="whitespace-nowrap bg-red-600 text-white rounded px-4 py-1.5 text-sm font-medium hover:bg-red-700 transition-colors"
                  @click="sessionToDelete = sess.id; showDeleteConfirm = true"
                >
                  Delete Session
                </button>
              </div>
            </div>

            <div class="mt-2 pt-2 border-t border-gray-600">
              <div class="mb-2">
                <label class="block text-sm text-gray-400 mb-1">Notes:</label>
                <textarea
                  class="w-full p-2 bg-gray-700 rounded text-sm text-white"
                  rows="3"
                  x-text="sess.notes"
                  @input="$store.sessions.updateNotes(sess.id, $event.target.value)"
                ></textarea>
              </div>
              <p class="text-sm text-gray-400 mb-2">
                Team: <span
                  x-text="sess.team ? $store.pages.teams.teamsList.find(t => t.id === sess.team)?.name : '---'"
                ></span>
              </p>
              <template x-if="sess.team">
                <div class="mb-2 p-3 bg-gray-900/60 rounded-lg">
                  <p class="text-sm text-gray-300 mb-2 font-medium">
                    Players & Attendance:
                  </p>
                  <ul class="space-y-1">
                    <template
                      x-for="player in ($store.pages.teams.teamsList.find(t => t.id === sess.team)?.players || [])"
                      :key="player"
                    >
                      <li
                        class="flex items-center gap-3 p-2 bg-gray-800 rounded"
                      >
                        <span class="flex-1 text-white" x-text="player"></span>
                        <input
                          type="checkbox"
                          class="accent-green-500 w-4 h-4"
                          :checked="sess.attendance && sess.attendance[player]"
                          @change="$store.sessions.toggleAttendance(sess.id, player)"
                        />
                      </li>
                    </template>
                  </ul>
                </div>
              </template>
              <ul class="space-y-1">
                <template x-for="id in sess.activities" :key="id">
                  <li
                    class="p-2 bg-gray-700 rounded cursor-pointer"
                    @click="expandedActivitiesUpcoming[sess.id + '-' + id] = !expandedActivitiesUpcoming[sess.id + '-' + id]"
                  >
                    <div class="flex justify-between items-center">
                      <span
                        x-text="$store.scheduling.activitiesList.find(a => a.id === id).name"
                      ></span>
                      <span
                        x-text="$store.scheduling.activitiesList.find(a => a.id === id).duration"
                        class="text-sm text-gray-400"></span>
                    </div>
                    <div
                      class="mt-1 text-sm text-gray-300"
                      x-show="expandedActivitiesUpcoming[sess.id + '-' + id]"
                      x-transition
                      x-text="$store.scheduling.activitiesList.find(a => a.id === id).description"
                    >
                    </div>
                  </li>
                </template>
              </ul>
            </div>
          </li>
        </template>
      </ul>
    </div>

    <!-- Previous Sessions -->
    <div x-show="activeTab === 'previous'">
      <ul class="space-y-2">
        <template
          x-for="sess in $store.scheduling.previousSessions"
          :key="sess.id"
        >
          <li
            class="flex flex-col p-2 bg-gray-800 rounded hover:bg-gray-900 transition-colors"
          >
            <div class="flex justify-between items-center">
              <div>
                <span x-text="sess.name" class="font-medium"></span>
                <span x-text="sess.date" class="text-sm text-gray-400 ml-2"
                ></span>
              </div>
              <button
                type="button"
                class="whitespace-nowrap bg-red-600 text-white rounded px-4 py-1.5 text-sm font-medium hover:bg-red-700 transition-colors"
                @click="sessionToDelete = sess.id; showDeleteConfirm = true"
              >
                Delete Session
              </button>
            </div>

            <div class="mt-2 pt-2 border-t border-gray-600">
              <div class="mb-2">
                <label class="block text-sm text-gray-400 mb-1">Notes:</label>
                <textarea
                  class="w-full p-2 bg-gray-700 rounded text-sm text-white"
                  rows="3"
                  x-text="sess.notes"
                  @input="$store.sessions.updateNotes(sess.id, $event.target.value)"
                ></textarea>
              </div>
              <p class="text-sm text-gray-400 mb-2">
                Team: <span
                  x-text="sess.team ? $store.pages.teams.teamsList.find(t => t.id === sess.team)?.name : '---'"
                ></span>
              </p>
              <template x-if="sess.team">
                <div class="mb-2 p-3 bg-gray-900/60 rounded-lg">
                  <p class="text-sm text-gray-300 mb-2 font-medium">
                    Players & Attendance:
                  </p>
                  <ul class="space-y-1">
                    <template
                      x-for="player in ($store.pages.teams.teamsList.find(t => t.id === sess.team)?.players || [])"
                      :key="player"
                    >
                      <li
                        class="flex items-center gap-3 p-2 bg-gray-800 rounded"
                      >
                        <span class="flex-1 text-white" x-text="player"></span>
                        <input
                          type="checkbox"
                          class="accent-green-500 w-4 h-4"
                          :checked="sess.attendance && sess.attendance[player]"
                          @change="$store.sessions.toggleAttendance(sess.id, player)"
                        />
                      </li>
                    </template>
                  </ul>
                </div>
              </template>
              <ul class="space-y-1">
                <template x-for="id in sess.activities" :key="id">
                  <li
                    class="p-2 bg-gray-700 rounded cursor-pointer"
                    @click="expandedActivitiesPrevious[sess.id + '-' + id] = !expandedActivitiesPrevious[sess.id + '-' + id]"
                  >
                    <div class="flex justify-between items-center">
                      <span
                        x-text="$store.scheduling.activitiesList.find(a => a.id === id).name"
                      ></span>
                      <span
                        x-text="$store.scheduling.activitiesList.find(a => a.id === id).duration"
                        class="text-sm text-gray-400"></span>
                    </div>
                    <div
                      class="mt-1 text-sm text-gray-300"
                      x-show="expandedActivitiesPrevious[sess.id + '-' + id]"
                      x-transition
                      x-text="$store.scheduling.activitiesList.find(a => a.id === id).description"
                    >
                    </div>
                  </li>
                </template>
              </ul>
            </div>
          </li>
        </template>
      </ul>
    </div>
  </div>

  <!-- Confirmation -->
  <div
    x-show="showConfirm"
    x-cloak
    class="fixed inset-0 z-50 flex items-center justify-center backdrop-blur-sm"
  >
    <div class="bg-gray-800 p-6 rounded shadow-lg w-full max-w-sm text-center">
      <p class="mb-6 text-white">
        Marking this session as complete cannot be undone. Continue?
      </p>
      <div class="flex justify-center gap-4">
        <button
          type="button"
          class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors"
          @click="$store.sessions.completeSession(sessionToComplete); showConfirm = false"
        >
          Confirm
        </button>
        <button
          type="button"
          class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition-colors"
          @click="showConfirm = false"
        >
          Cancel
        </button>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation -->
  <div
    x-show="showDeleteConfirm"
    x-cloak
    class="fixed inset-0 z-50 flex items-center justify-center backdrop-blur-sm"
  >
    <div class="bg-gray-800 p-6 rounded shadow-lg w-full max-w-sm text-center">
      <p class="mb-6 text-white">
        Are you sure you want to delete this session? This action cannot be
        undone.
      </p>
      <div class="flex justify-center gap-4">
        <button
          type="button"
          class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors"
          @click="$store.scheduling.deleteSession(sessionToDelete); showDeleteConfirm = false"
        >
          Delete
        </button>
        <button
          type="button"
          class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition-colors"
          @click="showDeleteConfirm = false"
        >
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>
